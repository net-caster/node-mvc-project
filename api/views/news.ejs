<%- include('includes/head.ejs') %>
<link rel="stylesheet" type="text/css" href="/styles/css/news.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>
        <main>
            <% if (posts.length > 0) { %>
                <div class="posts-container">
                    <% for (let post of posts) { %>
                        <article class="post">
                                <a href="news/<%= post._id %>" class="post__link--default">
                                    <h1 class="post__title">
                                        <%= post.title %>
                                    </h1>
                                </a>
                            <div class="post__content">
                                <p class="post-content__p">
                                    <%= post.content %>
                                </p>
                            </div>
                            <div class="post__actions">
                                <a href="/news/<%= post._id %>" class="post__btn"><b>Read More...</b></a>
                            </div>
                        </article>
                    <% } %>
                    <%- include('includes/pagination.ejs') %>
                </div>
            <% } else { %>
                <h1 class="no-posts">No Posts Found!</h1>
            <% } %>
        </main>
<%- include('includes/end.ejs') %>