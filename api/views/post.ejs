<%- include('includes/head.ejs') %>
<link rel="stylesheet" type="text/css" href="/styles/css/news.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <div class="post-container">
        <article class="post-view">
            <h1 class="post-view__title"><%= post.title %></h1>
            <div class="post-view__content">
                <p class="post-view__p"><%= post.content %></p>
            </div>
            <% if (isAuth) { %>
                <div class="post-view__actions">
                    <a href="/admin/edit-post/<%= post._id %>?edit=true" class="btn edit-post__btn">Edit</a>
                    <input type="hidden" name="postId" value="<%= post._id %>"/>
                    <button class="btn delete-post__btn" onclick="deletePost(this)" type="button">Delete</button>
                </div>
            <% } %>
        </article>
    </div>
    <% if (isAuth) { %>
        <script src="/scripts/deletePost.js" type="text/javascript"></script>
    <% } %>
<%- include('includes/end.ejs') %>