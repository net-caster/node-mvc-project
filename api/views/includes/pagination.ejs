<section class="pagination">
    <% if (search) { %>
        <% if (currentPage !== 1 && previousPage !== 1) { %>
        <a href="?search=<%= search %>&page=1">1</a>
        <% } %>
        <% if (hasPreviousPage) { %>
            <a href="?search=<%= search %>&page=<%= previousPage %>"><%= previousPage %></a>
        <% } %>
        <a href="?search=<%= search %>&page=<%= currentPage %>" class="active"><%= currentPage %></a>
        <% if (hasNextPage) { %>
            <a href="?search=<%= search %>&page=<%= nextPage %>"><%= nextPage %></a>
        <% } %>
        <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
            <a href="?search=<%= search %>&page=<%= lastPage %>"><%= lastPage %></a>
        <% } %>
    <% } else { %>
        <% if (currentPage !== 1 && previousPage !== 1) { %>
        <a href="?page=1">1</a>
        <% } %>
        <% if (hasPreviousPage) { %>
            <a href="?page=<%= previousPage %>"><%= previousPage %></a>
        <% } %>
        <a href="?page=<%= currentPage %>" class="active"><%= currentPage %></a>
        <% if (hasNextPage) { %>
            <a href="?page=<%= nextPage %>"><%= nextPage %></a>
        <% } %>
        <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
            <a href="?page=<%= lastPage %>"><%= lastPage %></a>
        <% } %>
    <% } %>
</section>