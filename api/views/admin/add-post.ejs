<%- include('../includes/head.ejs') %>
<link rel="stylesheet" type="text/css" href="/styles/css/admin.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="admin-container">
    <%- include('../includes/admin-tabs.ejs') %>
        <div class="admin-content">
            <form class="post-form" action="/admin/add-post" method="POST">
                <div class="form-control">
                    <label for="title">Title</label>
                    <input 
                        type="text" 
                        name="title" 
                        class="post-form__title"/>
                </div>
                <div class="form-control">
                    <label for="content">Content</label>
                    <textarea name="content" class="post-form__content" rows="10" cols="60"></textarea>
                </div>
                <button class="post-form__btn" type="submit">Add Post</button>
            </form>
        </div>
    </div>
<%- include('../includes/end.ejs') %>