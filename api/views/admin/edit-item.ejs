<%- include('../includes/head.ejs') %>
<link rel="stylesheet" type="text/css" href="/styles/css/admin.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="admin-container">
    <%- include('../includes/admin-tabs.ejs') %>
        <div class="admin-content">
            <form class="edit-form" action="/admin/edit-item/<%= item._id %>" method="POST" enctype="multipart/form-data">
                <div class="form-control">
                    <label for="name"><%= item.name %></label>
                    <input 
                        type="text" 
                        name="name" 
                        class="form-item__name"
                        value="<%= item.name %>"/>
                </div>
                <div class="form-control">
                    <label for="imageUrl">Image</label>
                    <img src="<%= item.imageUrl %>" class="form__preview-imageUrl">
                    <input type="file" name="imageUrl" class="form-item__imageUrl" value="<%= item.imageUrl %>"/>
                </div>
                <div class="form-control">
                    <label for="price">Price</label>
                    <input 
                        type="number" 
                        name="price" 
                        class="form-item__price" 
                        step="0.01"
                        value="<%= item.price %>"/>
                </div>
                <div class="form-control">
                    <label for="description">Description</label>
                    <textarea name="description" class="form-item__description" rows="10" cols="60"><%= item.description %></textarea>
                </div>
                <button class="item-form__btn" type="submit">Edit Item</button>
            </form>
        </div>
    </div>
    <script src="/scripts/imageUpload.js" type="text/javascript"></script>
<%- include('../includes/end.ejs') %>