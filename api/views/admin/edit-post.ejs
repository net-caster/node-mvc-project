<%- include('../includes/head.ejs') %>
<link rel="stylesheet" type="text/css" href="/styles/css/admin.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="admin-container">
        <div class="admin-content">
            <form class="post-form" action="/admin/edit-post/<%= post._id %>" method="POST">
                <div class="form-control">
                    <label for="title"><%= post.title %></label>
                    <input 
                        type="text" 
                        name="title" 
                        class="post-form__title"
                        value="<%= post.title %>"/>
                </div>
                <div class="form-control">
                    <label for="content">Content</label>
                    <textarea name="content" class="post-form__content" rows="15" cols="80"><%= post.content %></textarea>
                </div>
                <button class="post-form__btn btn" type="submit">Edit Post</button>
            </form>
        </div>
    </div>
<%- include('../includes/end.ejs') %>