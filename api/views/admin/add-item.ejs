<%- include('../includes/head.ejs') %>
<link rel="stylesheet" type="text/css" href="/styles/css/admin.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="admin-container">
    <%- include('../includes/admin-tabs.ejs') %>
        <div class="admin-content">
            <form class="item-form" action="/admin/add-item" method="POST" enctype="multipart/form-data">
                <div class="form-control">
                    <label for="name">Name</label>
                    <input 
                        type="text" 
                        name="name" 
                        class="form-item__name"/>
                </div>
                <div class="form-control">
                    <label for="imageUrl">Image</label>
                    <img src="" class="form__preview-imageUrl--hidden">
                    <input 
                        type="file" 
                        name="imageUrl" 
                        class="form-item__imageUrl"/>
                </div>
                <div class="form-control">
                    <label for="price">Price</label>
                    <input 
                        type="number" 
                        name="price" 
                        class="form-item__price" 
                        step="0.01"/>
                </div>
                <div class="form-control">
                    <label for="description">Description</label>
                    <textarea name="description" class="form-item__description" rows="10" cols="60"></textarea>
                </div>
                <button class="item-form__btn" type="submit">Add Item</button>
            </form>
        </div>
    </div>
    <script src="/scripts/imageUpload.js" type="text/javascript"></script>
<%- include('../includes/end.ejs') %>